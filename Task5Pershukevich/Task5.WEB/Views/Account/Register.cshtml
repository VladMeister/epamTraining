@model Task5.WEB.Models.RegisterModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <table class="table">
        <tr>
            <th>
                Email:
            </th>
            <th>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { autocomplete = "off", maxlength = 30 } })
            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
        <tr>
            <th>
                Password:
            </th>
            <th>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { maxlength = 8 } })
            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
        <tr>
            <th>
                Confirm password:
            </th>
            <th>
                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { maxlength = 8 } })
            </th>
            <th>
                <input type="submit" value="Register" class="btn btn-secondary" />
            </th>
            <th>
                @Html.ActionLink("Back", "Login", "Account", new { @class = "btn btn-secondary" })
            </th>
        </tr>
    </table>
}

