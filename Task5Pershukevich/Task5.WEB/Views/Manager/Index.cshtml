@model IEnumerable<Task5.WEB.Models.ManagerViewModel>

@{
    ViewBag.Title = "Managers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Manager", FormMethod.Get))
{
    <p>
        Filter by last name: @Html.TextBox("searchString", null, new { autocomplete = "off", maxlength = 30 })
        <input type="submit" value="Search" class = "btn btn-secondary"/>
    </p>
}

<table class="table">
    <tr>
        <th>
            Last name
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditManager", new { id = item.Id }, new { @class = "btn btn-secondary" })
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteManager", new { id = item.Id }, new { @class = "btn btn-secondary" })
            </td>
        </tr>
    }

</table>
