<!DOCTYPE html>
<html>
<head>
    <link href="../../Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/layout.css" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container body-content">
        @if (User.Identity.IsAuthenticated)
        {
            <input type="button" value="Logout" class="btn btn-secondary" onclick="location.href='@Url.Action("Logout", "Account")'" />
            <p style="font-style:italic">@User.Identity.Name</p>
            if(this.User.IsInRole("admin"))
            {
                <h6>Admin</h6>
            }
        }
        <header>
            <div class="maintitle">
                <h3>@ViewBag.Title</h3>
            </div>
            <br />
        </header>
        @RenderBody()
        <br />
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year  @Html.ActionLink("Task5 - Pershukevich", "Index", "Home", null, new { style = "text-decoration:none;" })</p>
        </footer>
    </div>
</body>
</html>
