@{
    ViewBag.Title = "Clients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Ajax.BeginForm("ClientSearch", "Client", new AjaxOptions { UpdateTargetId = "results" }))
{
    <p>
        Filter by last name: @Html.TextBox("searchString", null, new { autocomplete = "off", maxlength = 30 })
        <input type="submit" value="Search" class="btn btn-secondary" />
    </p>
}
<div id="results"></div>

@Scripts.Render("~/scripts/jquery-1.8.0.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")


