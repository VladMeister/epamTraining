@model IEnumerable<Task5.WEB.Models.ClientViewModel>

@{
    ViewBag.Title = "Clients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Client", FormMethod.Get))
{
    <p>
        Filter by last name: @Html.TextBox("searchString", null, new { autocomplete = "off", maxlength = 30 })
        <input type="submit" value="Search" class = "btn btn-secondary"/>
    </p>
}

<table class="table">
    <tr>
        <th>
            First name
        </th>
        <th>
            Last name
        </th>
        <th>

        </th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Lastname }, new { @class = "btn btn-secondary" })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Lastname }, new { @class = "btn btn-secondary" })
            </td>
        </tr>
    }
</table>


